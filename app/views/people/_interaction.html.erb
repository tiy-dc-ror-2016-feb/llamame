<hr>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" aria-expanded="false" aria-controls="collapse">
          <div class="row">
            <div class="col-md-8">
              <strong><%= interaction.topic  %></strong>
            </div>
            <div class="col-md-4">
              <div class="text-right">
                <small>
                  <%= interaction.user.full_name %>
                  <%= icon_type(interaction.medium) %>
                  <%= time_ago_in_words(Time.now) + " ago" %>
                </small>
              </div>
            </div>
          </div>
        </a>
      </h4>
    </div>
    <%= content_tag_for(:div, @interaction, class: 'panel-collapse collapse in ') do %>
      <div class="panel-body">
        <strong>Details:</strong>
        <%= interaction.details %>
        <div>
          <%= link_to fa_icon('pencil', text: 'Edit'), edit_interaction_path(interaction), class: 'btn btn-sm btn-default' %>
          <%= link_to fa_icon('trash-o', text: 'Destroy'), interaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
