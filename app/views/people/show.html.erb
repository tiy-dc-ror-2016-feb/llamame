<% content_for(:sidebar) do %>
<%= link_to "Add Interaction",  new_interaction_path(person_id: @person.id), class: "btn-block btn btn-success", remote: true %>
<% end %>


<%= image_tag("person_pictures/#{@person.id}.jpg", width: 100, class: 'thumbnail') %>

<div class="page-header">
  <h2>
    <%= "#{@person.first_name} #{@person.last_name} (#{@person.company.name})" %>
      <div>
      <small>
        <%= link_to fa_icon('chevron-left', text: 'Back'), people_path, class: 'btn btn-sm btn-default' %>
        <%= link_to fa_icon('pencil', text: 'Edit'), edit_person_path(@person), class: 'btn btn-sm btn-default' %>
      </small>
    </div>
  </h2>
</div>

<div class="row">

    <div class="col-md-3">
        <h4>
          Phone
          <%= link_to "+",  new_person_phone_number_path(@person), remote: true %>
        </h4>
        <% @person.phone_numbers.each do |phone_number| %>
        <br><%= phone_number.number_type %>:
        <%= phone_number.number %>
        <% end %>

        <p id="phone-form"></p>
    </div>

    <div class="col-md-4">
        <h4>
          Email
          <%= link_to "+",  new_person_email_path(@person), remote: true %>
        </h4>
        <% @person.emails.each do |email| %>
        <br><%= email.email %>
        <% end %>
        <p id="email-form"></p>
    </div>

    <div class="col-md-5">
        <h4>
          Address
          <%= link_to "+",  new_person_address_path(@person), remote: true %>
        </h4>
        <% @person.addresses.each do |address| %>
        <br>
        <%= address.address_1 %>
        <%= address.address_2 %>
        <%= address.city %>,
        <%= address.state %>
        <%= address.zip_code %>
        <% end %>
        <p id="address-form"></p>
    </div>
</div>

<h2> Interactions </h2>

<div id="interaction-form"></div>

<%= render partial: "people/interaction", collection:  @interactions %>
